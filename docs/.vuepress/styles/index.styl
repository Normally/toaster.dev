/**
 * Custom Styles here.
 */
 body
  overflow hidden
  overflow-y scroll

.home .hero img
  max-width 450px !important

.intro{
  max-width 50%
}

h1
  font-size 5em
  font-weight 700

h2
  border-bottom 0
  margin-top 3rem !important

.sidebar-mask, .sidebar
  display: none

.theme-container.sidebar-open .sidebar-mask
  display none

.table-holder
  overflow auto
  width: 100%
  position relative

table
  display table
  width 100%
  overflow-x visible


@media only screen and (max-width: 960px)
  .intro
    max-width 100%
  h1
    font-size 3em

